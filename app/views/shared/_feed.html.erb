<% if @feed_items.any? %>
    <ol class="microposts">
        <%# When specifying a 'collection' parameter, we MUST specify the partial %>
        <%# using a 'partial' parameter %>
        <%= render partial: 'shared/feed_item', collection: @feed_items %>
    </ol>
    <%= will_paginate @feed_items %>
<% end %>

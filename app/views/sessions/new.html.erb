<h1>Sign In!</h1>

<div class="row">
    <div class="span6 offset3">
        <%= form_for(:session, url: sessions_path) do |f| %>
            <%= f.label :email %><%= f.text_field :email %>
            <%= f.label :password %><%= f.text_field :password %>
            <%= f.submit "Log in NOW", class: "btn btn-large btn-primary"%>
        <% end %>
        <p>No account yet? <%= link_to "Sign up now!",signup_path %></p>
    </div>
</div>

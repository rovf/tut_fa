<% provide(:title, 'Home') %>

<!-- css classes btn*, center and hero-unit are for Bootstrap framework -->

<% if signed_in? %>
    <div class="row">
        <aside class="span4">
            <section>
                <%= render 'shared/user_info' %>
            </section>
            <section>
                <%= render 'shared/micropost_form' %>
            </section>
        </aside>
    </div>
<% else %>
    <div class="center hero-unit">
        <h1>FirstAppの家</h1>
        <p>Find this <%= yield(:title) %> in app/views/static_pages/home.html.erb</p>

        <%= link_to 'Sign up', signup_path, class: 'btn btn-large btn-primary' %>

    </div>
<% end %>

<%= link_to image_tag('rails.png',alt:Rails), 'http://rubyonrails.org/' %>

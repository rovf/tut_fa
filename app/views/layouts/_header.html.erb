<!-- Goes on top of page.
     The class names starting with 'navbar', and also 'container', 'nav' and 'pull-right',
     have special meaning inside the Bootstrap framework.
-->
<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "My playground application", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Home",    root_path %></li>
          <li><%= link_to "Help",    help_path %></li>
          <% if signed_in? %>
            <li><%= link_to "Users", '#' %></li>
            <li><%= link_to "Run away!", signout_path, method: 'delete' %></li>
            <li class="dropdown" id="fat_menu">
                <%# data- attributes are ignored by the UA, but can be retrieved via JavaScript. It's understood by Bottstrap. %>
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Account<b class="caret"></b></a>
                <ul class="dropdown-menu">
                    <li><%= link_to "User Profile", current_user %></li>
                    <li><%= link_to "Settings", '#' %></li>
                </ul>
             </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
